<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
         <div class="col-sm-12">
            <div class="ibox float-e-margins">
                  <div class="ibox-title">
                      <h5>表单</h5>
                  </div>
                  <div class="ibox-content">
                      <form id="functionForm" class="form-horizontal">
                          <div class="form-group">
                            <button id="add_table" class="btn btn-primary" type="button" data-toggle="modal" data-target="#myModal">添加</button>
                            <button id="update_table" class="btn btn-primary" type="button">编辑</button>
                            <button id="remove_table" class="btn btn-primary" type="button">删除</button>
                            <button id="query_table" class="btn btn-primary" type="button">查询</button>
                            <button id="reset_form" class="btn btn-primary" type="button">重置</button>
                          </div>
                      </form>
                  </div>
            </div>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>基本 <small>分类，查找</small></h5>
                </div>
                <div id="main" class="ibox-content">
                    <table id="pw_table"
                        data-toggle="table"
                        data-ajax="dataLoad"
                        data-click-to-select="true"
                        data-height="500"
                        data-pagination="true"
                        data-side-pagination="server"
                        data-query-params="queryParams"
                        data-page-list="[10, 20, 50]"
                        >
                        <thead>
                            <tr>
                                <th data-field="state" data-checkbox="true"></th>
                                <th data-field="id">编号</th>
                                <th data-field="function_id">功能编号</th>
                                <th data-field="parent_id">父功能编号</th>
                                <th data-field="function_name">功能名称</th>
                                <th data-field="type">类型</th>
                                <th data-field="logo">图标</th>
                                <th data-field="url">URL</th>
                                <th data-field="order">顺序</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
         </div>
    </div>
</div>

<div class="modal inmodal" id="myModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
       <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">关闭</span>
                </button>
                <h4 class="modal-title">窗口标题</h4>
            </div>
                <div class="modal-body">
                    <form id="dialogForm" class="form-horizontal">
                    <div class="row">
                        <input type="hidden" name="flag">
                        <label class="col-sm-2 col-sm-offset-1 control-label">编号</label>
                        <div class="col-sm-5">
                            <input type="text" name="id" class="form-control" required>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <label class="col-sm-2 col-sm-offset-1 control-label">功能编号</label>
                        <div class="col-sm-5">
                            <input type="text" name="function_id" class="form-control" required>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                       <label class="col-sm-2 col-sm-offset-1 control-label">父功能编号</label>
                       <div class="col-sm-5">
                            <input type="text" name="parent_id" class="form-control" required>
                       </div>
                    </div>
                    <br/>
                    <div class="row">
                        <label class="col-sm-2 col-sm-offset-1 control-label">功能名称</label>
                        <div class="col-sm-5">
                            <input type="text" name="function_name" class="form-control" required>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                       <label class="col-sm-2 col-sm-offset-1 control-label">图标</label>
                       <div class="col-sm-5">
                            <input type="text" name="logo" class="form-control" required>
                       </div>
                    </div>
                    <br/>
                    <div class="row">
                       <label class="col-sm-2 col-sm-offset-1 control-label">类型</label>
                       <div class="col-sm-5">
                            <input type="text" name="type" class="form-control" required>
                       </div>
                    </div>
                    <br/>
                    <div class="row">
                       <label class="col-sm-2 col-sm-offset-1 control-label">url</label>
                       <div class="col-sm-5">
                            <input type="text" name="url" class="form-control" required>
                       </div>
                    </div>
                    <br/>
                    <div class="row">
                       <label class="col-sm-2 col-sm-offset-1 control-label">顺序</label>
                       <div class="col-sm-5">
                            <input type="text" name="order" class="form-control" required>
                       </div>
                    </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                    <button id="save_dialog" type="button" class="btn btn-primary">保存</button>
                </div>
            </div>
       </div>
    </div>
